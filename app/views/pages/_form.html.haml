= form_for @page do |f|
  = render "shared/error_messages", :target => @page
  .field
    = f.label :title
    = f.text_field :title, :class=>"input"
  .field
    = f.label :body
    = f.text_area :body, :class=>"textarea"
  .field
    = f.check_box :published
    = f.label :published
    
  .actions
    = f.submit 'Save', :class=>"button"
